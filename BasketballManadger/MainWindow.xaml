<Window x:Class="BasketballManadger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasketballManadger"
        mc:Ignorable="d"
        Title="BasketballManager" Height="450" Width="800" Activated="Window_Activated" Loaded="Window_Loaded">
    
    <Grid>
        <DataGrid x:Name="dgTeams" AutoGenerateColumns ="False" GridLinesVisibility="None" FontSize="16">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Logo">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Path = Logo}" Width="140"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding Path=City}" IsReadOnly="True" Header="City" Width="140"/>
                <DataGridTextColumn Binding="{Binding Path=TeamName}" IsReadOnly="True" Header="TeamName" Width="140"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>

</Window>
